---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Button">
  <main class="m-auto box-border h-screen">
    <div class="flex flex-col justify-center items-center h-screen box-border">
			<h1 class="flex justify-center p-8 text-4xl">Ilari's button.</h1>
      <div id="notification" class="hidden text-xl p-4 border-4 border-white">
        Assignment completed.
      </div>
      <button
        id="button"
        type="button"
        onclick="button.style.display='none'; notification.style.display='block';"
        class="box-content text-xl p-4 rounded-xl border-4 border-purple-400 hover:border-orange-500"
      >
        Click Me!
      </button>
    </div>
  </main>
</Layout>
